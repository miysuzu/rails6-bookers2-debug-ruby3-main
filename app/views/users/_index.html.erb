<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th>フォロー数</th>
      <th>フォロワー数</th>
      <th>操作</th>
      <th></th> <!-- Showリンク -->
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size: '50x50', class: "rounded-circle" %></td>
        <td><%= user.name %></td>
        <td><%= user.followings.count %></td>
        <td><%= user.followers.count %></td>
        <td>
          <% if current_user != user %>
            <% if current_user.followings.include?(user) %>
              <%= button_to 'フォロー外す', user_relationships_path(user), method: :delete, class: "btn btn-sm btn-secondary" %>
            <% else %>
              <%= button_to 'フォローする', user_relationships_path(user), method: :post, class: "btn btn-sm btn-primary" %>
            <% end %>
          <% end %>
        </td>
        <td><%= link_to 'Show', user, class: "btn btn-sm btn-outline-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
