<table class='table'>
  <tr>
    <td colspan="2" class="text-center">
      <%= image_tag user.get_profile_image, size:'100x100' %>
    </td>
  </tr>
  <tr>
    <th>name</th>
    <td><%= user.name %></td>
  </tr>
  <tr>
    <th>introduction</th>
    <td><%= user.introduction %></td>
  </tr>
  <tr>
    <th>コメント数</th>
    <td><%= user.book_comments.count %></td>
  </tr>
  <tr>
  <th>follows</th>
  <td><%= link_to user.followings.count, followings_user_path(user) %></td>
</tr>
<tr>
  <th>followers</th>
  <td><%= link_to user.followers.count, followers_user_path(user) %></td>
</tr>
</table>

<% if current_user != user %>
  <div class="mb-3">
    <% if current_user.followings.include?(user) %>
      <%= button_to 'フォロー外す', user_relationships_path(user), method: :delete, class: "btn btn-secondary w-100" %>
    <% else %>
      <%= button_to 'フォローする', user_relationships_path(user), method: :post, class: "btn btn-primary w-100" %>
    <% end %>
  </div>
<% end %>

<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>
