<%= form_with model: book, local: true do |f| %>

  <%= render "layouts/errors", obj: book %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control book_title', value: book.title %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control book_body' do %>
      <%= book.body %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.submit book.new_record? ? "Create Book" : "Update Book", class: 'btn btn-success' %>
  </div>

<% end %>

