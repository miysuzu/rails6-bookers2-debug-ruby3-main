<% if book.favorited_by?(current_user) %>
  <%= form_with url: book_favorite_path(book), method: :delete, local: false do %>
    <%= button_tag(type: :submit, class: "btn text-danger fs-3", style: "text-decoration: none;") do %>
      <i class="fas fa-heart"></i>
    <% end %>
  <% end %>
<% else %>
  <%= form_with url: book_favorite_path(book), method: :post, local: false do %>
    <%= button_tag(type: :submit, class: "btn text-primary fs-3", style: "text-decoration: none;") do %>
      <i class="far fa-heart"></i>
    <% end %>
  <% end %>
<% end %>
