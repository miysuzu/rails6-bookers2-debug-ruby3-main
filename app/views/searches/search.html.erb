<div class="container mt-4">
  <h2 class="mb-4">
    <%= @range == "Book" ? "Books search for \"#{@keyword}\"" : "Users search for \"#{@keyword}\"" %>
  </h2>

  <% if @range == "Book" %>
    <% if @books.present? %>
      <table class="table">
        <thead>
          <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image, size: "60x60" %></td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>該当する投稿はありません。</p>
    <% end %>

<% elsif @range == "User" %>
  <% if @users.present? %>
    <% @users.each do |user| %>
      <div class="d-flex align-items-center border-bottom py-3">
        <!-- プロフィール画像 -->
        <div class="me-3">
          <%= image_tag user.get_profile_image, size: "60x60", class: "rounded" %>
        </div>

        <!-- 名前とボタン -->
        <div class="d-flex justify-content-between w-100 align-items-center">
          <strong class="fs-5"><%= user.name %></strong>
          <%= link_to "Show", user_path(user), class: "btn btn-sm btn-outline-secondary" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>該当するユーザーはいません。</p>
  <% end %>
<% end %>

</div>
